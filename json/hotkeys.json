{
    "toggle": {
        "win": "ctrl+alt+space",
        "linux": "<ctrl>+<alt>+<space>",
        "desc": "Start/Stop tracking the selected label"
    },
    "next_label": {
        "win": "ctrl+alt+n",
        "linux": "<ctrl>+<alt>+n",
        "desc": "Select previous label"
    },
    "prev_label": {
        "win": "ctrl+alt+p",
        "linux": "<ctrl>+<alt>+p",
        "desc": "Select next label"
    },
    "label_add": {
        "win": "ctrl+alt+a",
        "linux": "<ctrl>+<alt>+a",
        "desc": "Add a new label"
    },
    "label_del": {
        "win": "ctrl+alt+d",
        "linux": "<ctrl>+<alt>+d",
        "desc": "Delete a label"
    },
    "label_update": {
        "win": "ctrl+alt+u",
        "linux": "<ctrl>+<alt>+u",
        "desc": "Update name of a existing label"
    },
    "label_stats": {
        "win": "ctrl+alt+l",
        "linux": "<ctrl>+<alt>+l",
        "desc": "Show label statistics"
    },
    "exit_tracker": {
        "win": "ctrl+alt+e",
        "linux": "<ctrl>+<alt>+e",
        "desc": "Exit the tracker"
    },
    "show_hotkeys": {
        "win": "ctrl+alt+h",
        "linux": "<ctrl>+<alt>+h",
        "desc": "Show this table"
    }
}